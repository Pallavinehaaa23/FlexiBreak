{
    "manifest_version": 3,
    "name": "FlexiBreak",
    "version": "1.0",
    "description": "Reminds you to take a 10-minute break every 1 hour and guides you to stretch your body giving you orthopadeic relief.",
    "permissions": ["alarms", "notifications"],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "images/icon16.jpg",
        "48": "images/icon48.jpg",
        "128": "images/icon128.jpg"
      }
    },
    "icons": {
      "16": "images/icon16.jpg",
      "48": "images/icon48.jpg",
      "128": "images/icon128.jpg"
    }
  }
  